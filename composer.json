{
  "name": "ergebnis/keep-a-changelog",
  "description": "Provides a GitHub repository template for a PHP package with GitHub Actions workflows using standard PHP development tools.",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Andreas MÃ¶ller",
      "email": "am@localheinz.com",
      "homepage": "https://localheinz.com"
    }
  ],
  "homepage": "https://github.com/ergebnis/keep-a-changelog",
  "support": {
    "issues": "https://github.com/ergebnis/keep-a-changelog/issues",
    "source": "https://github.com/ergebnis/keep-a-changelog",
    "security": "https://github.com/ergebnis/keep-a-changelog/blob/main/.github/SECURITY.md"
  },
  "require": {
    "php": "~7.4.0 || ~8.0.0 || ~8.1.0 || ~8.2.0 || ~8.3.0",
    "ergebnis/version": "^1.1.0"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.44.0",
    "ergebnis/data-provider": "^3.3.0",
    "ergebnis/license": "^2.5.0",
    "ergebnis/php-cs-fixer-config": "^6.37.0",
    "ergebnis/phpunit-slow-test-detector": "^2.16.0",
    "fakerphp/faker": "^1.23.0",
    "infection/infection": "~0.26.6",
    "phpunit/phpunit": "^9.6.20",
    "psalm/plugin-phpunit": "~0.19.0",
    "rector/rector": "^1.2.8",
    "vimeo/psalm": "^5.26.1"
  },
  "autoload": {
    "psr-4": {
      "Ergebnis\\KeepAChangelog\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Ergebnis\\KeepAChangelog\\Test\\": "test/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "infection/extension-installer": true
    },
    "audit": {
      "abandoned": "report"
    },
    "platform": {
      "php": "7.4.33"
    },
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "composer-normalize": {
      "indent-size": 2,
      "indent-style": "space"
    }
  }
}
